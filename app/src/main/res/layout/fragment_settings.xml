<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="운동: 20초"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/text_rest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="휴식: 10초"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/text_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="세트: 8"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <LinearLayout
            android:id="@+id/layout_timecap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME CAP"
                android:textSize="40dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/btn_set_timecap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="타임캡 설정"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/btn_set_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="NONE"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_confirm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_check_dark_blue"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_border"
            android:text="확인"
            android:textSize="40sp" />
    </LinearLayout>

</FrameLayout>